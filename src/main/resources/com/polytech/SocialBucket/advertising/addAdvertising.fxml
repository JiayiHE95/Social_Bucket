<GridPane fx:id="gridPane" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.polytech.SocialBucket.UI.Advertising.AddAdvertisingController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="Add a ad" style="-fx-font-size: 12px;" GridPane.columnIndex="5" GridPane.rowIndex="1" GridPane.columnSpan="1"/>

    <Button text="Add image" style="-fx-background-color: #00cc66; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#addImage"/>
    <ImageView fx:id="imageView" fitWidth="100" fitHeight="100">
    </ImageView>
    <Label fx:id="fileLabel" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

    <Label text="Text" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <TextField fx:id="textField" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

    <Label text="Link" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <TextField fx:id="linkField" GridPane.columnIndex="2" GridPane.rowIndex="6"/>

    <Label text="Duration" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <ComboBox fx:id="durationComboBox" GridPane.columnIndex="2" GridPane.rowIndex="7">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="1" />
                <String fx:value="3" />
                <String fx:value="6" />
                <String fx:value="12" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label fx:id="statusLabel" GridPane.columnIndex="2" GridPane.rowIndex="8"/>


</GridPane>
