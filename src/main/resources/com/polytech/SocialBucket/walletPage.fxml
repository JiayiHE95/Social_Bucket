<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.polytech.SocialBucket.UI.WalletController"
          hgap="10" vgap="10">

    <!-- Première ligne -->
    <Label text="Welcome to Wallet Page" GridPane.rowIndex="3" GridPane.halignment="CENTER" />

    <!-- Deuxième ligne -->
    <Button text="PAY" onAction="#handlePay" GridPane.rowIndex="4" GridPane.halignment="CENTER" />

    <!-- Troisième ligne -->
    <Label fx:id="moneyInWallet" GridPane.rowIndex="5" GridPane.halignment="CENTER" />

    <!-- Ajoutez d'autres éléments au besoin en spécifiant les colonnes et les lignes -->
</GridPane>
