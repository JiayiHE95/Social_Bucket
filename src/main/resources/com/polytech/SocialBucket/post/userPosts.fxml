<?import javafx.scene.layout.VBox?> <!-- Modification ici -->


<GridPane fx:id="gridPane" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.polytech.SocialBucket.UI.Post.UserPostsController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="My posts" style="-fx-font-size: 12px;" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="1"/>

    <Button text="My profile" style="-fx-background-color: #00cc66; -fx-text-fill: white;" GridPane.columnIndex="2" GridPane.rowIndex="5" onAction="#goToProfile"/>

   <VBox fx:id="postContainer" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-padding: 10px;">
    <!-- Les détails de chaque post seront ajoutés ici dynamiquement -->
</VBox>

</GridPane>
