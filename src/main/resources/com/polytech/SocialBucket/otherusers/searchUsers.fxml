<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.polytech.SocialBucket.UI.OtherUsers.SearchUsersController">
    <children>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="searchField" promptText="Search Users"/>
            <Button text="Search" onAction="#searchUsers"/>
        </HBox>
        
        <VBox fx:id="resultsContainer" visible="false">
            <ListView fx:id="userListView" prefHeight="200">
                <!-- This is where the search results will be displayed -->
            </ListView>
        </VBox>
        
        <Label fx:id="noUsersLabel" text="No users found" visible="false"/>

    </children>
</VBox>