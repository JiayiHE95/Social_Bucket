<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.polytech.SocialBucket.UI.ClientController">

    <center>
        <ScrollPane>
            <TextArea fx:id="messageArea" editable="false" />
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10">
            <TextField fx:id="inputField" promptText="Type your message..." HBox.hgrow="ALWAYS" />
            <Button text="Send" onAction="#sendMessage" />
        </HBox>
    </bottom>

</BorderPane>
